								<row>
									<widget category="widgetTypeConf">placeholder</widget>
								</row>
								<row>
									<widget category="widgetTypeConf">disabled</widget>
								</row>
								<row>
									<widget category="widgetTypeConf">immediate</widget>
								</row>
								<row>
									<widget category="widgetTypeConf">lang</widget>
								</row>
								<row>
